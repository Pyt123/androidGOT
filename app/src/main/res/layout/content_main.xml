<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="437dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/uloz_wedrowke_button"
            android:layout_width="192dp"
            android:layout_height="64dp"
            android:text="Ułóż wędrówkę"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="109dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/moje_wedrowki_button"
            android:layout_width="192dp"
            android:layout_height="64dp"
            android:text="Moje wędrówki"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="190dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/ranking_button"
            android:layout_width="192dp"
            android:layout_height="64dp"
            android:text="Ranking"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="275dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/moje_statystyki_button"
            android:layout_width="192dp"
            android:layout_height="64dp"
            android:text="Moje statystyki"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="360dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>