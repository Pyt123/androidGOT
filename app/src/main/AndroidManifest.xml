<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dantczak.got">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RankingActivity"
            android:label="@string/title_activity_ranking"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dantczak.got.MainActivity" />
        </activity>
        <activity
            android:name=".SetupWalkActivity"
            android:label="@string/title_activity_setup_walk"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dantczak.got.MainActivity" />
        </activity>
        <activity
            android:name=".LeaderMainActivity"
            android:label="@string/title_activity_leader_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VerificationActivity"
            android:label="@string/title_activity_verification"
            android:parentActivityName=".LeaderMainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dantczak.got.LeaderMainActivity" />
        </activity>
        <activity
            android:name=".MountainGroupActivity"
            android:label="@string/title_activity_mountain_group"
            android:parentActivityName=".RankingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dantczak.got.RankingActivity" />
        </activity>
        <activity
            android:name=".DateFrameActivity"
            android:label="@string/title_activity_date_frame"
            android:parentActivityName=".RankingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dantczak.got.RankingActivity" />
        </activity>
    </application>

</manifest>